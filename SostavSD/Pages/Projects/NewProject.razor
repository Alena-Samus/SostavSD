@page "/projects/newproject"

<div class="row">
	<MudButtonGroup Variant="Variant.Outlined" Color="Color.Success" OverrideStyles="false" >
		<MudIconButton Class="mx-4 my-2" Variant="Variant.Filled" Icon="@Icons.Material.Filled.Save" Title="@Localizer["saveNewProject"]" Color="Color.Success"  @onclick="(e => GoToPage(_toProject))"/>	 
		<MudIconButton Class="mx-4 my-2" Variant="Variant.Filled" Icon="@Icons.Material.Outlined.CollectionsBookmark" Title="@Localizer["listOfContracts"]" Color="Color.Info"  @onclick="(e => GoToPage(_toContracts))"/>	 

	</MudButtonGroup>
</div>

<MudGrid>
	<MudItem xs="9">
		<MudTextField FullWidth T="string" Label="@Localizer["projectName"]" Variant="Variant.Outlined"></MudTextField>	
	</MudItem>
	<MudGrid>
		<MudItem xs="3">
			<div>
				<MudAutocomplete T="ContractForTableModel" Label="@Localizer["index"]" Variant="Variant.Outlined" @bind-Value="_selectedContract" SearchFunc="@FindContract" 
								ToStringFunc="@(i => i is null ? "" : $"{i.Contract?.Index}")"/>
				<MudTextField T="string" Label="@Localizer["order"]" Text="@_selectedContract.Contract?.Order" Variant="Variant.Outlined" ReadOnly=true/>
				<MudTextField T="string" Label="@Localizer["contractNumber"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["contractDate"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["customer"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["cpe"]" Variant="Variant.Outlined"></MudTextField>
			</div>
		</MudItem>
		<MudItem xs="3">
			<div>				
				<MudTextField T="string" Label="@Localizer["calculator"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["buildingZone"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["buildingView"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["releaseDate"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["releaseDateByContract"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["designStage"]" Variant="Variant.Outlined"></MudTextField>
			</div>
			
		</MudItem>
		<MudItem xs="3">
			<div>	
				
				<MudTextField T="string" Label="@Localizer["buildingNumber"]" Variant="Variant.Outlined"></MudTextField>	
				<MudTextField T="string" Label="@Localizer["dateWorkStart"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["sourceOfFinancing"]" Variant="Variant.Outlined"></MudTextField>	
				<MudTextField T="string" Label="@Localizer["versionCiC"]" Variant="Variant.Outlined"></MudTextField>
				<MudTextField T="string" Label="@Localizer["printType"]" Variant="Variant.Outlined"></MudTextField>
			</div>
		</MudItem>
	</MudGrid>
</MudGrid>






