@inject IStringLocalizer<ContractAddNewAndEdit> localizer

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="@localizer["Object"]" @bind-Value="Contract.ProjectName" Lines="5"/>
        <MudTextField T="string" Label="@localizer["Index"]" @bind-Value="Contract.Index"/>
        <MudTextField T="string" Label="@localizer["Order"]" @bind-Value="Contract.Order"/>
        <MudTextField T="string" Label="@localizer["ContractNumber"]" @bind-Value="Contract.ContractNumber"/>
        <MudDatePicker Label="@localizer["ContractDate"]" @bind-Date="Contract.ContractDate"/>
        <MudDatePicker Label="@localizer["ContractDateEndOfWork"]" @bind-Date="Contract.ContractDateEndOfWork"/>
        <MudSelect T="int" Label="@localizer["Customer"]" AnchorOrigin="Origin.BottomCenter" @bind-Value="Contract.CompanyID" Required=true >
           <MudSelectItem Value="0">--@localizer["ChooseTheCustomer"]--</MudSelectItem>
            @foreach (var item in _companies)
            {
            <MudSelectItem Value="@item.CompanyID">@item.CompanyName</MudSelectItem>
            }
        </MudSelect>
        <MudTextField T="string" Label="@localizer["City"]" @bind-Value="Contract.City"/>

    </DialogContent>

    <DialogActions>
        <MudButton @onclick="Cancel">@localizer["cancelChanges"]</MudButton>
        <MudButton @onclick="Submit" Color="Color.Primary">@localizer["saveChanges"]</MudButton>
    </DialogActions>
</MudDialog>