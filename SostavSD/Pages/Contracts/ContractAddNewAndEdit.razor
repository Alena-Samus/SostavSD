

<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="@localizer["index"]" @bind-Value="Contract.Index"/>
        <MudTextField T="string" Label="@localizer["order"]" @bind-Value="Contract.Order"/>
        <MudTextField T="string" Label="@localizer["contractNumber"]" @bind-Value="Contract.ContractNumber"/>
        <MudDatePicker Label="@localizer["contractDate"]" @bind-Date="Contract.ContractDate"/>
        <MudSelect T="int" Label="@localizer["customer"]" AnchorOrigin="Origin.BottomCenter" @bind-Value="Contract.CompanyID" Required=true >
           <MudSelectItem Value="0">--@localizer["chooseTheCustomer"]--</MudSelectItem>
            @foreach (var item in _companies)
            {
                 <MudSelectItem Value="@item.CompanyID">@item.CompanyName</MudSelectItem>
            }
        </MudSelect>
        <MudSelect  T="int?" Label="@localizer["buildingZone"]" @bind-Value="Contract.BuildingZoneId">
            @foreach (var item in _buildingZones)
            {
                 <MudSelectItem T="int?" Value="@item.BuildingZoneId">@item.BuildingZoneName</MudSelectItem>
            }
        </MudSelect>
        <MudSelect  T="int?" Label="@localizer["source"]" @bind-Value="Contract.SourceOfFinancingId">
            @foreach (var item in _sources)
            {
                        <MudSelectItem T="int?" Value="@item.SourceId">@item.SourceName</MudSelectItem>
            }
        </MudSelect>
        <MudSelect T="string" Label="@localizer["cpe"]" AnchorOrigin="Origin.BottomCenter" @bind-Value="Contract.UserID">
            @foreach (var item in _usersCPE)
            {
                    <MudSelectItem T="string" Value="@item.IdUser">@item.SurnameUser</MudSelectItem>
            }
        </MudSelect>
        <MudSelect T="string" Label="@localizer["calculator"]" AnchorOrigin="Origin.BottomCenter" @bind-Value="Contract.CalculatorId">
            @foreach (var item in _usersCalculator)
            {
                <MudSelectItem T="string" Value="@item.IdUser">@item.SurnameUser</MudSelectItem>
            }
        </MudSelect>
        <MudTextField T="string" Label="@localizer["city"]" @bind-Value="Contract.City"/>

    </DialogContent>

    <DialogActions>
        <MudButton @onclick="Cancel">@localizer["cancelChanges"]</MudButton>
        <MudButton @onclick="Submit" Color="Color.Primary">@localizer["saveChanges"]</MudButton>
    </DialogActions>
</MudDialog>