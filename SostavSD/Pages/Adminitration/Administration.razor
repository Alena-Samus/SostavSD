@using Microsoft.AspNetCore.Authorization;
@using Microsoft.AspNetCore.Identity;


@inject RoleManager<IdentityRole> _RoleManager


<MudTable Items="@_users" SortLabel="Sort By"> 
    <HeaderContent>
        <MudTh>Id</MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<UserSostav,object>(x => x.Email)">Name</MudTableSortLabel></MudTh>
        <MudTh><MudTableSortLabel SortBy="new Func<UserSostav,object>(x => x.Email)">Email</MudTableSortLabel></MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Id">@context.Id</MudTd>
        <MudTd DataLabel="Name">@context.Email</MudTd>
        <MudTd DataLabel="Email">@context.Email</MudTd>
    </RowTemplate>
</MudTable>